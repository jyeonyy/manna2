<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/homefragment"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99000000"
        android:id="@+id/bar31"
        />

    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar31"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#ffffffff"
        android:text="HOME"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99000000"
        android:layout_below="@+id/home"
        android:layout_marginTop="5dp"
        android:id="@+id/bar32"
        />


    <ImageView
        android:id="@+id/flower"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/bar32"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/kakaoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="hyemin"
        android:textColor="#ff444444"
        android:textSize="30sp"
        android:layout_marginTop="43dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/memolistview"
        android:layout_marginEnd="34dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99000000"
        android:layout_below="@+id/flower"
        android:foregroundGravity="center|center_vertical|center_horizontal"
        android:layout_marginTop="0dp"
        android:id="@+id/bar33"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear31"
        android:orientation="horizontal"
        android:layout_below="@id/bar33">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEMO"
            android:textSize="30sp"
            android:id="@+id/memotitle"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99000000"
            android:id="@+id/bar34"
            android:layout_marginTop="50sp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/linear32"
        android:layout_below="@id/linear31"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:id="@+id/memoedit"
            android:hint="메모를 입력하세요"
            android:textSize="20sp"
            android:layout_marginLeft="30sp"/>

        <ImageButton
            android:id="@+id/memoplus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:onClick="addmemo"
            android:scaleType="centerInside"
            android:src="@drawable/plus1"
            android:text="meeting"
            tools:ignore="ContentDescription,HardcodedText"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/memolistview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/linear32"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">
    </ListView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/meeting3"
        android:layout_above="@+id/bar33"
        android:layout_alignStart="@+id/memolistview"
        android:layout_marginStart="12dp" />

    <ImageButton
        android:id="@+id/chagne"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bar32"
        app:srcCompat="@drawable/shuffle" />

</RelativeLayout>
